			String dadosCompletos = "CÃ³digo do produto: "+ getCodigo() +" | "+"Subtotal do produto: " + getSubtotal() + " | "+ "Desconto do produto: "+ getDesconto() +" |"+"Total do produto:  "+getTotaldoProduto()+"."; 

